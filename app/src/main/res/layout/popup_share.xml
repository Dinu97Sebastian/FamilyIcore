<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_margin="24dp">

        <ImageView
            android:id="@+id/shares_icon"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:src="@drawable/new_users"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/shares"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/roboto"
            android:text="Share in Familheey"
            android:textColor="@color/greymedium"
            android:textSize="18sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/shares_icon"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_marginTop="22dp"
            android:id="@+id/shares_social"
            android:src="@drawable/new_advertse"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shares_icon"/>

        <TextView
            android:id="@+id/socials"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="22dp"
            android:fontFamily="@font/roboto"
            android:text="Share in Social Media"
            android:textColor="@color/greymedium"
            android:textSize="18sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/shares_social"
            app:layout_constraintTop_toBottomOf="@+id/shares" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>