<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="70dip">

        <ImageView
            android:id="@+id/cardimg"
            android:layout_width="50dip"
            android:layout_height="30dip"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/stripevisa" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dip"
            android:layout_toStartOf="@+id/rb_seletion"
            android:layout_toEndOf="@+id/cardimg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cardtype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dip"
                    android:layout_marginEnd="3dp"
                    android:gravity="center"
                    android:textColor="@color/text_color"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="4dip"
                    android:gravity="bottom"
                    android:text="@string/dash"
                    android:textColor="#e4e4e4"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/cardlastdigit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="4dip"
                    android:gravity="bottom"
                    android:textColor="#e4e4e4"
                    android:textSize="16sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/txtexp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="10dip"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dip"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="#e4e4e4"
                android:textSize="14sp" />


        </LinearLayout>

        <RadioButton
            android:id="@+id/rb_seletion"
            android:layout_width="30dip"
            android:layout_height="40dip"
            android:layout_alignStart="@+id/deletecard"
            android:paddingBottom="4dip" />

        <ImageView
            android:id="@+id/deletecard"
            android:layout_width="30dip"
            android:layout_height="40dip"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="15dp"
            android:contentDescription="@null"
            android:padding="6dip"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_delete_black_24dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginTop="3dip"
        android:background="#e4e4e4" />
</LinearLayout>
