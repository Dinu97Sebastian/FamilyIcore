            <ImageView
                android:id="@+id/img_con"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginStart="4dp"
                android:contentDescription="@null"
                android:layout_marginEnd="4dp"
                android:src="@drawable/new_ic_chat" />

            <TextView
                android:id="@+id/txt_chat_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_toEndOf="@+id/img_con"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                tools:ignore="RelativeOverlap,SmallSp" />

            <ImageView
                android:id="@+id/btn_view"
                android:layout_width="40dp"
                android:layout_height="36dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="4dp"
                android:padding="3dp"
                android:layout_toStartOf="@+id/txt_view_count"
                app:srcCompat="@drawable/new_ic_view" />

            <TextView
                android:id="@+id/txt_view_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@+id/btn_more"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                tools:ignore="SmallSp" />


            <ImageView
                android:id="@+id/btn_more"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                app:tint="@color/black50"
                android:contentDescription="@null"
                android:padding="3dp"
                android:src="@drawable/ic_more_vert_black_24dp" />

        </RelativeLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>