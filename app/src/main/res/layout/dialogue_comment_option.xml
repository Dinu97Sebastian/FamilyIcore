<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/full_View"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/downloadView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">
            <ImageView
                android:id="@+id/downloadIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/download_icon"
                app:tint="@color/quantum_grey500"
                />

            <TextView
                android:id="@+id/download"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Download"
                android:layout_toEndOf="@+id/downloadIcon"
                android:textColor="#212121"
                android:textSize="17dp"
                android:visibility="gone" />
            </RelativeLayout>
<RelativeLayout
    android:id="@+id/copyView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/copyIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_copy"
        app:tint="@color/quantum_grey500"
        />
    <TextView
        android:id="@+id/copy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_toEndOf="@+id/copyIcon"
        android:text="Copy"
        android:textColor="#212121"
        android:textSize="17dp" />
</RelativeLayout>


            <RelativeLayout
                android:id="@+id/deleteView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">
            <ImageView
                android:id="@+id/deleteIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_delete"
                app:tint="@color/quantum_grey500"
                />
            <TextView
                android:id="@+id/delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Delete"
                android:layout_toEndOf="@id/deleteIcon"
                android:visibility="gone"
                android:textColor="#212121"
                android:textSize="17dp" />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white" />
            <RelativeLayout
                android:id="@+id/forwardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/forwardIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_forword"
                app:tint="@color/quantum_grey500"
                />
            <TextView
                android:id="@+id/forward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:paddingTop="10dp"
                android:layout_toEndOf="@+id/forwardIcon"
                android:paddingBottom="10dp"
                android:text="Forward"
                android:textColor="#212121"
                android:textSize="17dp" />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white" />
            <RelativeLayout
                android:id="@+id/replyView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/replyIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_reply"
                app:tint="@color/quantum_grey500"
                />
            <TextView
                android:id="@+id/reply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Reply"
                android:layout_toEndOf="@+id/replyIcon"
                android:textColor="#212121"
                android:textSize="17dp" />

            </RelativeLayout>



        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>