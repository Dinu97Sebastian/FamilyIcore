<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <ImageView
                android:id="@+id/familyLogo"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginEnd="10dp"
                android:contentDescription="@null"
                android:src="@drawable/avatar_male" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtGroupName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_bold"
                    android:maxLines="1"
                    android:textColor="#1D1E1F"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtcreatedby"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:ellipsize="end"
                        android:alpha="0.52"
                        android:fontFamily="@font/roboto"
                        android:maxLines="1"
                        android:textColor="#1D1E1F"
                        android:textSize="13sp" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:contentDescription="@null"
                        android:padding="2dp"
                        android:src="@drawable/ic_location" />

                    <TextView
                        android:id="@+id/txt_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto_light"
                        android:maxLines="1"
                        android:alpha="0.77"
                        android:textColor="#848E99"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/membervaliidity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/txt_member_count"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/roboto_bold"
                        android:maxLines="1"
                        android:textColor="#1D1E1F"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/roboto"
                        android:maxLines="1"
                        android:text="Members"
                        android:textColor="#848E99"
                        android:textSize="12sp" />


                    <TextView
                        android:id="@+id/txt_post_count"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="25dp"
                        android:gravity="center_vertical"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto_bold"
                        android:maxLines="1"
                        android:textColor="#1D1E1F"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto"
                        android:maxLines="1"
                        android:gravity="center_vertical"
                        android:text="Post"
                        android:textColor="#848E99"
                        android:textSize="12sp" />


                    <TextView
                        android:id="@+id/txt_validity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right|center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/join"
                            android:layout_width="wrap_content"
                            android:text="Join"
                            android:layout_height="28dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/background_toggle_green_curved"
                            android:fontFamily="@font/roboto"
                            android:gravity="center"
                            android:paddingLeft="20dp"
                            android:paddingEnd="20dp"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textAllCaps="false" />

                        <TextView
                            android:id="@+id/txt_joined"
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:fontFamily="@font/roboto"
                            android:gravity="center"
                            android:paddingLeft="16dp"
                            android:paddingEnd="16dp"
                            android:text="Joined"
                            android:textAllCaps="false"
                            android:textColor="@color/greenTextColor"
                            android:textSize="14sp"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height=".80dp"
            android:layout_marginTop="10dp"
            android:alpha="0.2"
            android:background="#b3707070" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>