<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    tools:context=".Dialogs.GroupTypeDialog">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/groupTypeContainer"
        style="@style/ShapeAppearanceOverlay_card_custom_corners"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="0dp"
        app:cardBackgroundColor="@color/white">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:id="@+id/groupType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="8dp"
                android:orientation="vertical"
                >

                <RadioButton
                    android:id="@+id/regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Regular"
                    style="@style/radioButtonStyle"/>

                <RadioButton
                    android:id="@+id/company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/radioButtonStyle"
                    android:text="Company"/>

                <RadioButton
                    android:id="@+id/individualFirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Individual firm"
                    style="@style/radioButtonStyle"/>

                <RadioButton
                    android:id="@+id/nonProfitOrganization"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/radioButtonStyle"
                    android:text="Non Profit Organization"/>

                <RadioButton
                    android:id="@+id/institute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Institute"
                    style="@style/radioButtonStyle"/>


                <RadioButton
                    android:id="@+id/relegious"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Religious/Spiritual"
                    style="@style/radioButtonStyle"/>

                <RadioButton
                    android:id="@+id/community"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Community"
                    style="@style/radioButtonStyle"/>

                <RadioButton
                    android:id="@+id/assosiation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Association"
                    style="@style/radioButtonStyle"/>
                <RadioButton
                    android:id="@+id/team"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Team"
                    style="@style/radioButtonStyle"/>

                <RadioButton
                    android:id="@+id/project"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Project"
                    style="@style/radioButtonStyle"/>


                <RadioButton
                    android:id="@+id/branchOrDivision"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:paddingBottom="12dp"
                    android:text="Branch or Division"
                    style="@style/radioButtonStyle"/>

                <RadioButton
                    android:id="@+id/others"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:text="Others"
                    style="@style/radioButtonStyle"/>


            </RadioGroup>
        </LinearLayout>
</ScrollView>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>