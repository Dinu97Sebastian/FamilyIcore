<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="8dp"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/userImage"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginEnd="10dp"
                android:contentDescription="@null"
                android:src="@drawable/avatar_male" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_bold"
                    android:maxLines="1"
                    android:textColor="#1D1E1F"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon_location"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="-3dp"
                        android:contentDescription="@null"
                        android:padding="2dp"
                        android:src="@drawable/ic_location" />

                    <TextView
                        android:id="@+id/txt_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:ellipsize="end"
                        android:alpha="0.80"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/roboto_thin"
                        android:maxLines="1"
                        android:text="skjhkjsd sjdhf fsdkjh"
                        android:textColor="#848E99"
                        android:textSize="12sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/membervaliidity"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_marginTop="0dp"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/txt_family_count"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/roboto_bold"
                        android:ellipsize="end"
                        android:gravity="bottom"
                        android:maxLines="1"
                        android:textColor="#1D1E1F"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto"
                        android:maxLines="1"
                        android:gravity="bottom"
                        android:paddingStart="1dp"
                        android:text="Families"
                        android:textColor="#848E99"
                        android:textSize="13sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right|center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/addToTopic"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:paddingTop="5dp"
                            android:src="@drawable/ic_chat" />

                        <TextView
                            android:id="@+id/addToFamily"
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:text="Invite"
                            android:background="@drawable/background_toggle_green_curved"
                            android:fontFamily="@font/roboto"
                            android:gravity="center"
                            android:paddingLeft="16dp"
                            android:paddingEnd="16dp"
                            android:textColor="@color/white"
                            android:textAllCaps="false"
                            android:textSize="12sp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height=".80dp"
            android:layout_marginTop="13dp"
            android:alpha="0.2"
            android:background="#b3707070" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>