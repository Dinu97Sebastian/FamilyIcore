<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="0dp"
    android:layout_marginRight="0dp"

    android:orientation="vertical"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="false">

    <LinearLayout
        android:id="@+id/back_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height=".60dp"
            android:layout_marginBottom="10dp"
            android:alpha="0.2"
            android:background="#b3707070" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp">

            <ImageView
                android:id="@+id/familyLogo"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="2dp"
                android:contentDescription="@null"
                android:src="@drawable/family_logo" />

            <ImageView
                android:id="@+id/notSeen"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/online_indicator" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="-2dp"
                android:layout_toStartOf="@+id/endView"
                android:layout_toEndOf="@+id/familyLogo"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_tittle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="top"
                    android:text="Chinees Ballon Festival"
                    android:textColor="#1D1E1F"
                    android:textSize="15sp" />

                <LinearLayout
                    android:id="@+id/eventView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_event_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20 Aug 2020" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_location"
                            android:id="@+id/locationIcon"
                            app:tint="#848E99" />

                        <TextView
                            android:id="@+id/txt_event_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/roboto"
                            android:gravity="bottom"
                            android:maxLines="1"
                            android:paddingStart="3dp"
                            android:text="China"
                            android:textColor="#848E99"
                            android:textSize="9sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/event_user_profile"
                            android:layout_width="16dp"
                            android:layout_height="16sp"
                            android:src="@drawable/icon_profile" />

                        <TextView
                            android:id="@+id/txt_eveny_created_by"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:fontFamily="@font/roboto"
                            android:text="Steve Burjoo and 12 others | Innovation Incubator"
                            android:textColor="#848E99"
                            android:textSize="11sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/familyView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txt_created_by"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:alpha="0.5"
                        android:fontFamily="@font/roboto"
                        android:text="By Ajith Kaviiraj"
                        android:textColor="#686C74"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_location"
                            app:tint="#848E99" />

                        <TextView
                            android:id="@+id/family_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.8"
                            android:ellipsize="end"
                            android:fontFamily="@font/roboto"
                            android:gravity="bottom"
                            android:maxLines="1"
                            android:paddingStart="3dp"
                            android:text="China"
                            android:textColor="#848E99"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/txt_family_member_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/roboto_bold"
                            android:gravity="bottom"
                            android:maxLines="1"
                            android:text="78"
                            android:textColor="#1D1E1F"
                            android:textSize="11sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/roboto"
                            android:gravity="bottom"
                            android:maxLines="1"
                            android:paddingStart="3dp"
                            android:text="Members"
                            android:textColor="#848E99"
                            android:textSize="11sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/requestView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txt_request_des"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="KIMS Hospital"
                        android:textColor="#686C74" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/req_pro_pic"
                            android:layout_width="16dp"
                            android:layout_height="16sp"
                            android:src="@drawable/icon_profile" />

                        <TextView
                            android:id="@+id/txt_req_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:fontFamily="@font/roboto_light"
                            android:text="Steve Burjoo"
                            android:textColor="#949494"
                            android:textSize="11sp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="10dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:background="#1D1E1F"
                            android:visibility="gone" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_light"
                            android:text="Public"
                            android:textColor="#1D1E1F"
                            android:textSize="11sp"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/postView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txt_des"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textSize="13sp"
                        android:text="British airways sit amet, teadipisc vestibulum non ntesque More"
                        android:textColor="#1D1E1F" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_post_pro"
                            android:layout_width="16dp"
                            android:layout_height="16sp"
                            android:src="@drawable/icon_profile" />

                        <TextView
                            android:id="@+id/txt_post_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:fontFamily="@font/roboto_light"
                            android:text="Steve Burjoo"
                            android:textColor="#949494"
                            android:textSize="11sp" />

                        <View
                            android:id="@+id/post_divider"
                            android:layout_width="1dp"
                            android:layout_height="10dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:background="#3A2262" />


                        <TextView
                            android:id="@+id/txt_post_family_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_light"
                            android:text="Public"
                            android:maxLines="1"
                            android:textColor="#3A2262"
                            android:textSize="11sp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/endView"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-5dp">

                <ImageView
                    android:id="@+id/btn_more"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:padding="6dp"
                    android:src="@drawable/ic_more_vert_24"
                    app:tint="#666A72" />

                <TextView
                    android:id="@+id/txt_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="0dp"
                    android:alpha=".70"
                    android:fontFamily="@font/roboto"
                    android:text="5h"
                    android:textColor="#848E99"
                    android:textSize="11sp" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/btn_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="81dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_one"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_notification_green_button"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="GOING"
                android:textAllCaps="true"
                android:textColor="@color/greenTextColor"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_two"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_notification_gray_button"
                android:fontFamily="@font/roboto_light"
                android:gravity="center"
                android:minWidth="80dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="interested"
                android:textAllCaps="true"
                android:textColor="#666A72"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_three"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_notification_gray_button"
                android:fontFamily="@font/roboto_light"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Not interested"
                android:textAllCaps="true"
                android:textColor="#666A72"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>