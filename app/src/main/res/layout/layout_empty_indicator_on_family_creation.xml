<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/layout_no_post_on_creation"
    android:gravity="top">

    <ImageView
        android:id="@+id/iv_empty_indicator"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/welldone"
        android:textSize="22sp">
    </ImageView>

    <TextView
        android:id="@+id/tv_empty_indicator_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What should you do next?"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="Let's add a new one!" />
